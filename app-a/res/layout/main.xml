<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Call Another App's Activity (B1)"
        android:onClick="onClickCallActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Call Another App's First Tab"
        android:onClick="onClickCallFirstTab" />
        
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Call Another App's Second Tab"
        android:onClick="onClickCallSecondTab" />
        
        <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Call Calendar App's Monthly Tab"
        android:onClick="onClickCallMonthlyCalendar" />
        
        <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Call Calendar App's Daily Tab"
        android:onClick="onClickCallDailyCalendar" />

</LinearLayout>
